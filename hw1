char* newstring(char* str) {
    char* newstr = (char*)malloc(sizeof(char));
    strcpy(newstr,str);
    return newstr;
}
int mainmenu() {
    int i = 0;
    printf("choose option:\n0 exit\n1 books\n2 students\n3 add student's book\n");
